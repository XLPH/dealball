<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/editText"
    android:orientation="vertical">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw"
        android:layout_marginTop="6dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/phone_number_tv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="手机号:"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/phone_number_et"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/phone_number_tv"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:hint="请输入您的手机号"
                android:maxLines="1"
                android:maxLength="11"
                android:inputType="phone"
                android:textSize="17sp"
                android:background="@drawable/thinline"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/unable"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/password_tv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="密码    :"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/password_tv"
                android:layout_height="50dp"
                android:paddingLeft="6dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="textPassword"
                android:hint="请输入您的密码"
                android:textSize="17sp"
                android:background="@drawable/thinline"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/unable"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/confirm_password_tv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="确认密码:"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/confirm_password_et"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/confirm_password_tv"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="textPassword"
                android:hint="请再次输入您的密码"
                android:textSize="17sp"
                android:background="@drawable/thinline"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/unable"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/auth_code_tv"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="验证码:"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/auth_code_et"
                android:layout_width="200dp"
                android:layout_toRightOf="@+id/auth_code_tv"
                android:layout_height="50dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:maxLines="1"
                android:maxLength="6"
                android:inputType="textPassword"
                android:hint="请输入验证码"
                android:textSize="17sp"
                android:background="@drawable/thinline"/>

            <TextView
                android:id="@+id/send_code_tv"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="#FF6633"
                android:textSize="15sp" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/loginbutton"
        android:layout_marginTop="10dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_go_login"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/loginbutton"
        android:layout_marginTop="10dp"
        android:text="已有账号，去登录"
        android:textColor="@color/white"
        android:textSize="20sp" />






</LinearLayout>
