<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="127dp"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:background="@color/background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="209dp"
            android:layout_height="127dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/cim_info_user"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/curry"

                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/info_user_name"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="渣渣"
                    android:textSize="16dp"
                    android:textColor="@color/text_usually"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_info_detail"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#605f5f"
                android:text="   下午4点，学活篮球场，求组队，我有装备。"
                />

            <View
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#DFDFDF"/>

            <LinearLayout
                android:padding="4dp"
                android:background="@color/background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:background="#e99589"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:id="@+id/ll_info_detail"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/info_detail"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/detail"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="详情"
                        android:textSize="14dp"
                        android:textColor="@color/text_usually"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="13dp"
                    android:background="#DFDFDF"/>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:background="#72c7e6"
                    android:id="@+id/ll_info_phone"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/info_phone"
                        />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:textSize="14dp"
                        android:textColor="@color/text_usually"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>