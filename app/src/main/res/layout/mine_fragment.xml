<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/title"/>
    <include layout="@layout/mine_transfrom"
        android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/trans_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:background="@drawable/draw">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_user_photo"
                android:padding="15dp"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_image"
                />

            <ImageView
                android:id="@+id/mine_iv"
                android:layout_width="125dp"
                android:layout_height="123dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/mine_image"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/mine_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="175dp"
                android:layout_marginTop="13dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mine_watch"
                android:layout_marginRight="113dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mine_watch"
                android:layout_marginRight="49dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_watch_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="160dp"
                android:layout_marginTop="49dp"
                android:text="关注"
                android:textColor="#260f0f"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_attack_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mine_watch_word"
                android:layout_marginRight="100dp"
                android:text="进攻"
                android:textColor="#260f0f"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mine_defense_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mine_watch_word"
                android:layout_marginRight="37dp"
                android:text="防守"
                android:textColor="#260f0f"
                android:textSize="18sp" />

            <Button
                android:id="@+id/choose_login"
                android:layout_width="183dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/mine_watch_word"
                android:layout_marginBottom="15dp"
                android:background="@drawable/settings_view"
                android:text="注册/登录"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/draw"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:id="@+id/add_friends_el"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/add_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/add"
                     />

                <TextView
                    android:id="@+id/add_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="添加球友"
                    android:layout_toRightOf="@+id/add_iv"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a5a4a4"
                >
            </View>
            <RelativeLayout
                android:id="@+id/new_deal_el"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
              >
                <ImageView
                    android:id="@+id/deal_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/time"
                    />
                <TextView
                    android:id="@+id/deal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/deal_iv"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="新预约"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a5a4a4"
                >
            </View>
            <RelativeLayout
                android:id="@+id/news_el"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/news_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/news"
                    />
                <TextView
                    android:id="@+id/news_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="消息"
                    android:layout_toRightOf="@+id/news_iv"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/back" />
            </RelativeLayout>


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="5dp"
        android:background="@drawable/draw"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/mine_tab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabTextColor="#000000"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabMode="fixed"
            >

        </android.support.design.widget.TabLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mine_viewpager"

            >

        </android.support.v4.view.ViewPager>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</LinearLayout>
