<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_detail_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dddd">

    <include layout="@layout/title_arrow"/>

    <RelativeLayout
        android:id="@+id/change_user_photo"
        android:layout_marginTop="5dp"
        android:background="@color/colorText"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="@color/text_usually"
                android:text="头像"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="@color/text_pre"
                android:text="账号 :"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_user_header"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@mipmap/boy_user"
            />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@mipmap/back"
            />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/colorText"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_user_nick"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/user_nickname"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:text="街球王子"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_pre"
                android:textSize="14dp"
                android:layout_marginRight="50dp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/back"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <RelativeLayout
            android:id="@+id/rl_user_sex"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:text="男"
                android:id="@+id/user_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_pre"
                android:textSize="14dp"
                android:layout_marginRight="50dp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/back"
                />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:text="个性签名"
        android:textColor="@color/text_usually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_sign"
                android:textColor="@color/text_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你有FreeStayle吗？"
                android:textSize="14dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:text="账号绑定"
        android:textColor="@color/text_usually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/colorText"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_user_phone"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/user_phone"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="手机号(13319556287)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/is_bind"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:text="解除绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_pre"
                android:textSize="14dp"
                android:layout_marginRight="50dp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/back"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <RelativeLayout
            android:id="@+id/rl_user_we_chat"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:id="@+id/user_we_chat"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="微信()"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/is_we_chat_bind"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:text="未绑定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_pre"
                android:textSize="14dp"
                android:layout_marginRight="50dp"
                />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/back"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
