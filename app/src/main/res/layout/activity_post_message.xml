<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_public_article"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_settings"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发帖至:"
                />

            <TextView
                android:padding="2dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_second"
                android:id="@+id/tv_kind_court"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/colorText"
                android:textSize="14dp"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="4dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <EditText
                android:id="@+id/post_msg"
                android:gravity="start"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="在这里输入你想要发布的内容"
                android:textColorHint="@color/box_message"
                android:textSize="16dp"
                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:background="@color/colorText"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_public_time"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >
                <TextView
                    android:text="选择约球时间:"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_usually"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_public_time"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="时间"
                    android:textSize="14dp"
                    />

                <EditText
                    android:id="@+id/et_time"
                    android:textSize="14dp"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/thinline"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="180dp"
                    android:src="@mipmap/back"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a5a4a4"
                >
            </View>

            <LinearLayout
                android:id="@+id/ll_public_address"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >
                <TextView
                    android:text="选择约球地点:"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_usually"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_public_address"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地点"
                    android:textSize="14dp"
                    />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="170dp"
                    android:textSize="14dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/thinline"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="180dp"
                    android:src="@mipmap/back"
                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a5a4a4"
                >
            </View>
            <LinearLayout
                android:id="@+id/ll_people_num"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >
                <TextView
                    android:text="可预约人数:"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_usually"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_people_num"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="人数"
                    android:textSize="14dp"
                    />
                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="170dp"
                    android:textSize="14dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/thinline"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="180dp"
                    android:src="@mipmap/back"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#a5a4a4"
                >
            </View>

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorText"
            android:layout_below="@+id/select_zb"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            >
            <CheckBox
                android:layout_gravity="center"
                android:id="@+id/cb_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomCheckBoxTheme"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="有装备"
                android:textColor="@color/text_usually"
                />
            <CheckBox
                android:layout_gravity="center"
                android:id="@+id/cb_not_have"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomCheckBoxTheme"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="无装备"
                android:textColor="@color/text_usually"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorText"
            >

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/send_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/send_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
