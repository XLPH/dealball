<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2dddd"
    >
    <include layout="@layout/title_arrow"/>
    <LinearLayout
        android:background="#f9f6f6"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_setting_account"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/account"
                />

            <TextView
                android:text="账号管理"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <LinearLayout
            android:id="@+id/ll_setting_check_update"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/check_update"
                />

            <TextView
                android:text="检查更新"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>

    </LinearLayout>

    <LinearLayout
        android:background="#f9f6f6"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_my_more"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/more"
                />

            <TextView
                android:text="更多..."
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>
        <LinearLayout
            android:id="@+id/ll_my_about"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/about"
                />

            <TextView
                android:text="关于"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a5a4a4"
            >
        </View>

        <LinearLayout
            android:id="@+id/ll_my_help"
            android:layout_marginTop="1px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/help"
                />

            <TextView
                android:text="帮助"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_usually"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="200dp"
                android:src="@mipmap/back"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:id="@+id/bt_exit"
            android:textColor="@color/colorText"
            android:textSize="16dp"
            android:text="注销登录"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_second"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>

</LinearLayout>
