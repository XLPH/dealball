<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trans_t_rl"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/draw">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_user_photo"
        android:padding="15dp"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/mine_image"
        />

    <ImageView
        android:id="@+id/sex"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="183dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/boy" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mine_iv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:text="街球王子"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/site"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="165dp"
        android:background="@drawable/site" />

    <ImageView
        android:id="@+id/leaf"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/mine_iv"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="73dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/leaf" />
    <TextView
        android:id="@+id/age_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mine_iv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:text="球龄"
        android:textColor="#000000"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/ball_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mine_iv"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:text="5"
        android:textColor="#000000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="85dp"
        android:text="湖南长沙"
        android:textColor="#666666"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/mine_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="173dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mine_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mine_watch"
        android:layout_marginRight="113dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mine_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mine_watch"
        android:layout_marginRight="49dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mine_watch_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_user_photo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="158dp"
        android:text="关注"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mine_attack_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mine_watch_word"
        android:layout_marginRight="100dp"
        android:text="进攻"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mine_defense_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mine_watch_word"
        android:layout_marginRight="37dp"
        android:text="防守"
        android:textColor="#000000"
        android:textSize="18sp" />



</RelativeLayout>
